# Example Terraform variables file
# Copy this file to terraform.tfvars and update the values

# Project variables
project_id = "your-gcp-project-id"  # Replace with your GCP project ID
region     = "us-central1"

# Function source code location  
function_source_dir = "../minnesota-immunization-cloud"

# Google Drive configuration (optional)
google_drive_folder_id = "your-google-drive-folder-id"  # Replace with your Google Drive folder ID

# Alerting configuration
alert_email = "your-email@example.com"  # Replace with your email for error alerts